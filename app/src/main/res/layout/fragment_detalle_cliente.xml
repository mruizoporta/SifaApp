<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yio.io.sifaapp.fragment.DetalleClienteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            android:gravity="fill">

            <TextView
                android:id="@+id/txtviewcustomertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="Alexander Porta Arais"
                android:textColor="@color/colorPurple"
                android:background="@color/colorGrayLigth"
                />

            <TextView
                android:id="@+id/txtviewcustomerCD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:text="001-000000-0000D"
                android:textColor="@color/colorBlack"
                android:background="@color/colorGrayLigth"
                />

            <TextView
                android:id="@+id/txtviewtelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:text="2222-2222"
                android:textColor="@color/colorBlack"
                android:background="@color/colorGrayLigth"
                />

            <TextView
                android:id="@+id/txtcustomerAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matagalpa , Comarca El Paisa"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_place_purple_24dp"
                android:textColor="@color/colorGrayDark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtcustomerdatetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/customer.detail.fecha_abono"
                    android:drawableLeft="@drawable/ic_query_builder_purple_24dp"
                    android:textColor="@color/colorGrayDark"
                    />

                <TextView
                    android:id="@+id/txtcustomerdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25-05-2015"
                    android:textStyle="bold"
                    android:textColor="@color/colorGrayDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtcustomercuotatitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/customer.detail.cuota"
                    android:drawableLeft="@drawable/ic_monetization_on_purple_24dp"
                    android:textColor="@color/colorGrayDark"
                    />

                <TextView
                    android:id="@+id/txtcustomercuota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C$ 250"
                    android:textStyle="bold"
                    android:textColor="@color/colorGrayDark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtcustomersaldotitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer.detail.saldo"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_monetization_on_purple_24dp"
                    android:textColor="@color/colorGrayDark"
                    />

                <TextView
                    android:id="@+id/txtcustomersaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C$ 5,500"
                    android:textStyle="bold"
                    android:textColor="@color/colorGrayDark"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Referencia"
                android:scrollbars="vertical"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:background="@drawable/mybotton2"
                android:id="@+id/txtreferencia" />


        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:paddingLeft="6dp"
                android:text="@string/customer.detail.detailtitle"
                android:background="@color/colorBackground"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productosRecyclerView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:weightSum="0">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR REFERENCIA"
                    android:id="@+id/btnreferencia"
                    android:background="@color/colorPurple"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/colorwhite"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center_horizontal" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/abonar"
                    android:id="@+id/btnabonar"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/mybutton"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorPurple"
                    android:layout_gravity="bottom|center_horizontal" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Noabonar"
                    android:id="@+id/btnnoabonar"
                    android:background="@color/colorPurple"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/colorwhite"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center_horizontal" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
